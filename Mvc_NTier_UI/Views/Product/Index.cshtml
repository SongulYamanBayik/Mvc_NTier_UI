@using EntityLayer.Concrete
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ürün Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Stok</th>
        <th>Fiyat</th>
        <th>Fotoğraf</th>
        <th>Categori</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductID</td>
            <td>@item.ProductName</td>
            <td>@item.ProductStock</td>
            <td>@item.ProductPrice</td>
            <td>@item.ProductImage</td>
            <td>@item.CategoryID</td>
            <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Product/EditProduct/@item.ProductID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }

</table>

<a href="/Product/AddProduct/" class="btn btn-outline-primary">Yeni Ürün Girişi</a>

