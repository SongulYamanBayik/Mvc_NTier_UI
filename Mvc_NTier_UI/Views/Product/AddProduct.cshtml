@model EntityLayer.Concrete.Product
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Ürün Ekleme Sayfası</h2>
<form method="post">
    <label>Ürün Adı</label>
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    <label>Ürün Stok</label>
    @Html.TextBoxFor(x => x.ProductStock, new { @class = "form-control" })
    <br />
    <label>Fiyat</label>
    @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control" })
    <br />
    <label>Fotoğraf</label>
    @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control" })
    <br />
    <label>Categori</label>
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })


    <button class="btn btn-outline-danger">Kaydet</button>
</form>

